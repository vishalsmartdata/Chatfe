<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.sdei.chafte.R" />

        <import type="android.view.View" />

        <variable
                name="vm"
                type="com.sdei.chafte.ui.authentication.registration.RegistrationVM" />

        <variable
                name="a"
                type="String" />
        <variable
                name="b"
                type="String" />

        <variable
                name="c"
                type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/white"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            tools:context=".ui.main.MainActivity">

        <GridLayout
                android:id="@+id/glLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_15sdp"
                app:layout_constraintLeft_toLeftOf="parent" />

        <GridLayout
                android:id="@+id/glright"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="@dimen/_15sdp"
                app:layout_constraintRight_toRightOf="parent" />

        <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
               android:onClick="@{() -> vm.backButtonClick(4)}"
                android:layout_margin="@dimen/_5sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/ic_back_white_icon"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@+id/imageBack"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintLeft_toRightOf="@+id/glLeft"
                app:layout_constraintRight_toLeftOf="@+id/glright"
                android:layout_height="0dp">


            <TextView
                    android:id="@+id/txWhenYourBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/when_is_your_birthday"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

            <TextView
                    android:id="@+id/txBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/txWhenYourBirth"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

            <EditText
                    android:id="@+id/edBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ed_bg"
                    app:layout_constraintTop_toBottomOf="@+id/txBirth"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:maxLength="14"
                    android:text="@={vm.dateOfBirthObserver}"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:hint="00/00/0000"
                    android:editable="false"
                    android:textColorHint="@color/black_transparent"
                    android:textColor="@color/text_colour" />

           <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/edBirth"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginTop="@dimen/_15sdp">

               <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/visible_to_all"
                       android:textSize="@dimen/_12sdp"
                   android:checked="@{vm.birthDateVisiblity.equals(@string/all)}"
                   android:onClick="@{() -> vm.checkBirthDate(@string/all)}"
                       android:buttonTint="@color/colorPrimary"
                       android:paddingLeft="@dimen/_5sdp"/>

               <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/visible_to_friends_only"
                       android:textSize="@dimen/_12sdp"
                   android:checked="@{vm.birthDateVisiblity.equals(@string/friend)}"
                       android:onClick="@{() -> vm.checkBirthDate(@string/friend)}"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:buttonTint="@color/colorPrimary"
                       android:paddingLeft="@dimen/_5sdp"/>

           </RadioGroup>

            <TextView
                    android:id="@+id/txContinue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                   app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:maxLength="14"
                    android:onClick="@{() -> vm.buttonClickForNext(4)}"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:text="@string/contiune"
                    android:textColor="@color/white" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>